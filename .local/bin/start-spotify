#!/bin/bash

running=$(pidof -x $0)

if [[ $(echo $running | wc -w) -ge 2 ]] ; then
	dunstify -r "991069" "Spotify" "is already running"
	exit 1
fi

while ! pgrep polybar;do sleep 1; done

polybar player &
spotify &
SPOTIFY=$!

wait $SPOTIFY

xdo kill -a "polybar-player_eDP-1"
kill -- -$SPOTIFY || pkill spotify
