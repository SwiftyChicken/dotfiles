#!/bin/sh
 
 ####################################
 # STARTUP FILE FOR BASIC VARIABLES #
 ####################################

# DEFAULT PROGRAMS:
export EDITOR="nvim"
export BROWSER="qutebrowser"
export TERM="alacritty"

# BASIC VARIABLES:
