[module/search]
type = custom/script
exec = echo "󰍉"
click-left = ~/.config/polybar/scripts/search.sh &

[module/file-man]
type = custom/script
exec = echo "󰉋"
click-left = lid=$(cat /tmp/lfID); wmctrl -ir $lid -b toggle,hidden && wmctrl -ia $lid &

[module/screenshot]
type = custom/script
exec = echo "󰨤"
click-left = scrot "$(date +%s).png" -e 'mv "$f" ~/Pictures/Screenshots/ && dunstify -r "991030" "Say cheese..." "$f"' &

[module/prev]
type = custom/script
exec = echo "%{T5}%{F#FFF}%{F-}%{T-}" &
interval = 0.5

tail = true
click-left = playerctl --player=spotify previous &

[module/info]
type = custom/script
exec = echo "" &
interval = 0.5

tail = true
click-left = ~/.config/polybar/scripts/info.sh 2>/dev/null &

[module/toggle]
type = custom/script
exec = [[ "$(playerctl -p spotify status)" == "Playing" ]] && echo "" || echo ""
interval = 0.2

tail = true
click-left = playerctl --player=spotify play-pause &

[module/song]
type = custom/script
exec = ~/.config/polybar/scripts/song.sh 2>/dev/null 
format = "<label>    "
format-prefix = "%{F#1db954}     %{F-}"
format-background = #ce191414
interval = 0.5

tail = true
click-left = playerctl -p spotify play-pause & 

[module/next]
type = custom/script
exec = echo "%{T5}%{F#FFF}%{F-}%{T-}" &
interval = 0.5

tail = true
click-left = playerctl --player=spotify next &

[module/close-menu]
type = custom/script
exec = echo "%{O2}󰅂" &
interval = 600

tail = true

[module/cpu]
type = custom/script
exec = ~/.config/polybar/scripts/cpu.sh 2> /dev/null || echo "%{T5}%{F#dae1ec}󰓦%{T4}%{O-13}󰓦%{T-}%{F-}" 
format-prefix = " "
format-foreground = ${colors.secondary}

interval = 1
tail = true

[module/update]
type = custom/script
exec = ~/.config/polybar/scripts/update.sh 2> /dev/null || echo "󰏗%{T5}%{F#dae1ec}󰓦%{T4}%{O-13}󰓦%{T-}%{F-}"
format-foreground = ${colors.secondary}
interval = 1

tail =true

[module/news]
type = custom/script
